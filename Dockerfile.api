# syntax=docker/dockerfile:1
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY VisionaryAnalytics.sln ./
COPY VisionaryAnalytics.Api/VisionaryAnalytics.Api.csproj VisionaryAnalytics.Api/
COPY VisionaryAnalytics.Infrastructure/VisionaryAnalytics.Infrastructure.csproj VisionaryAnalytics.Infrastructure/
COPY VisionaryAnalytics.Worker/VisionaryAnalytics.Worker.csproj VisionaryAnalytics.Worker/
RUN dotnet restore VisionaryAnalytics.Api/VisionaryAnalytics.Api.csproj

COPY . .
RUN dotnet publish VisionaryAnalytics.Api/VisionaryAnalytics.Api.csproj -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "VisionaryAnalytics.Api.dll"]
